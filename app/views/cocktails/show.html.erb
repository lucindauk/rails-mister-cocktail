<h1> <%= @cocktail.name.capitalize %> </h1>
  <ul>
    <%= cl_image_tag @cocktail.photo, height: 200, width: 280, crop: :fill %>
    <% @cocktail.ingredients.each do |ingredient| %>
    <li>
      <%= "#{ingredient.name} (#{Dose.find_by(cocktail_id: @cocktail.id, ingredient_id: ingredient.id).description})" %>
    <%= link_to "x", dose_path(Dose.find_by(cocktail_id: @cocktail.id, ingredient_id: ingredient.id)), method: :delete %>
    </li>
    <% end %>
  </ul>


  <%= link_to "Add scrumptious ingredients", new_cocktail_dose_path(@cocktail) %>
  <br>
  <br>
  <%= link_to "Back to cocktail inventory", cocktails_path %>

